-- DÄ±ÅŸarÄ± tÄ±klanÄ±nca helpFrame kapansÄ±n (isteÄŸe baÄŸlÄ±)
gui.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local pos = UIS:GetMouseLocation()
        local absPos = helpFrame.AbsolutePosition
        local size = helpFrame.AbsoluteSize
        if helpFrame.Visible and (pos.X < absPos.X or pos.X > absPos.X + size.X or pos.Y < absPos.Y or pos.Y > absPos.Y + size.Y) then
            helpFrame.Visible = false
        end
    end
end)
